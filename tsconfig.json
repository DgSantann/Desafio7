{
    "compilerOptions": {
      "outDir": "./dist",
      "allowJs": true,
      "target": "ES6",
      "module": "ES6",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "./src/*/",
      "jest.config.ts",
      "knexfile.js"
    ],
    "exclude": [
      "node_modules"
    ]
  }